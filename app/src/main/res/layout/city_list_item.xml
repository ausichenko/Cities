<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="city" type="com.azcltd.android.test.usichenko.cities.service.models.City"/>
        <variable name="callback" type="com.azcltd.android.test.usichenko.cities.view.callback.CityClickCallback"/>
        <variable name="imageViewModel" type="com.azcltd.android.test.usichenko.cities.viewmodel.ImageViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="@{() ->  callback.onClick(city)}"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_view_selector"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                app:imageUrl="@{imageViewModel.imageUrl}" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@drawable/card_view_text_selector"
                android:text="@{city.name}"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>